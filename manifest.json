{
  "description": "Copy bug summary and translate it into wiki-friendly style",
  "manifest_version": 2,
  "name": "Bugzilla Helper",
  "version": "0.5",
  "homepage_url": "https://github.com/astleychen/bugzilla-helper",
  "icons": {
    "48": "icons/ic_view_list_black_24px.svg"
  },

  "content_scripts": [
    {
      "matches": ["*://bugzilla.mozilla.org/show_bug.cgi?id=*"],
      "js": ["summary2wiki.js"]
    }
  ]
}
